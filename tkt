<!-- Ajoutez le bouton dans le body, oÃ¹ vous voulez qu'il apparaisse -->
<button class="theme-toggle">ðŸŒ“</button>

<!-- Ajoutez ce script avant la fermeture du body -->
<script>
  const themeToggle = document.querySelector('.theme-toggle');
  const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
  
  // Charge le thÃ¨me sauvegardÃ© ou utilise la prÃ©fÃ©rence systÃ¨me
  const currentTheme = localStorage.getItem('theme') || 
                      (prefersDarkScheme.matches ? 'dark' : 'light');
  document.body.dataset.theme = currentTheme;

  themeToggle.addEventListener('click', () => {
    const newTheme = document.body.dataset.theme === 'light' ? 'dark' : 'light';
    document.body.dataset.theme = newTheme;
    localStorage.setItem('theme', newTheme);
  });
</script>